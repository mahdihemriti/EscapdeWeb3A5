{% extends 'baseBack.html.twig' %}
{% block content %}

    <h1>Liste de nos destinations </h1>
    <hr>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Pays</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.pays }}</td>



                <td>
                    <a href="{{ path('app_destination_show', {'id': destination.id}) }}">Détails</a>
                    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de destinations trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_destination_new') }}">Ajouter une destination</a>

{% endblock %}
