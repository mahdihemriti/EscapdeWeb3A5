<body class="bg-gradient-primary">

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div  class="col-lg-6 d-none d-lg-block">
                            <img src="{{ asset('images/log.jpg') }}" width="500" >
                        </div>

                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                                </div>
                                {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Nom'}}) }}
                                            {{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}
                                        </div>
                                        <div class="col-sm-6">
                                            {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Prenom'}}) }}
                                            {{ form_errors(form.prenom,{'attr':{'class':'text-danger'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
                                        {{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.datedenaissance,{'attr':{'class':'form-control','placeholder':'Date de naissance'}}) }}
                                        {{ form_errors(form.datedenaissance,{'attr':{'class':'text-danger'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.numtel,{'attr':{'class':'form-control','placeholder':'Num√©ro Telephone'}}) }}
                                        {{ form_errors(form.numtel,{'attr':{'class':'text-danger'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.ville,{'attr':{'class':'form-control','placeholder':'Ville'}}) }}
                                        {{ form_errors(form.ville,{'attr':{'class':'text-danger'}}) }}
                                    </div>
                                    <div class="form-group">
                                    {{ form_widget(form.image,{'attr':{'class':'form-control','placeholder':'image'}}) }}
                                    {{ form_errors(form.image,{'attr':{'class':'text-danger'}}) }}
                                     </div>

                                <div class="form-group">
                                    {{ form_widget(form.mdp.first,{'attr':{'class':'form-control','placeholder':'Mot de passe'}}) }}
                                    {{ form_errors(form.mdp.first,{'attr':{'class':'text-danger'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_widget(form.mdp.second,{'attr':{'class':'form-control','placeholder':'confirmer mot de passe'}}) }}
                                    {{ form_errors(form.mdp.second,{'attr':{'class':'text-danger'}}) }}
                                </div>
                                {{ form_widget(form.recaptcha) }}
                                <button class="btn btn-primary btn-user btn-block">{{ button_label|default('inscrire') }}</button>

                                {{ form_end(form) }}

                                <hr>
