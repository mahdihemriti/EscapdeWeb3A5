{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <br>
    <div class="fh5co-hero">


    <div id="fh5co-tours" class="fh5co-section-gray">
    <div class="container">

    {% for blog in blogs %}
        <div class="col-lg-4 col-md-4 col-sm-6">
        <div class="fh5co-blog animate-box">
            <a><img class="img-responsive" src="{{ asset('images/' ~ blog.image) }}" alt=""></a>
            <div class="blog-text">
                <div class="prod-title">
                    <h3><a>{{ blog.nom }}</a></h3>
                    <span class="posted_by">{{ blog.date ? blog.date|date('Y-m-d') : '' }}</span>
                    <span class="comment"><a href="">21<i class="icon-bubble2"></i></a></span>
                    <p>{{ blog.description | striptags | slice(0, 30) }} ...</p>

                    <p><a href="{{ path('frontblog', {'id': blog.id}) }}">Learn More...</a></p>
                </div>
            </div>
        </div>
        </div>

    {% endfor %}
    </div>
    </div>
    </div>
{% endblock %}