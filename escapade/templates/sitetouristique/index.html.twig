{% extends 'baseBack.html.twig' %}


{% block content %}


    <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <a href="{{ path('addsite') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                    <h5 class="card-title">Liste des sites touristiques</h5>

                    <!-- Table with stripped rows -->
                    <div  style="display: flex;margin-bottom: 100px;margin-top: 10px; padding: 15px;">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Type</th>
                            <th>Libelle</th>
                            <th>Adresse</th>
                            <th>Description</th>
                            <th>Prix</th>
                            <th>Modification</th>
                            <th>Suppression</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for site in b %}
                            <tr>
                                <td>{{ site.type }}</td>
                                <td>{{ site.libelle}}</td>
                                <td>{{ site.adresse}}</td>
                                <td>{{ site.description}}</td>
                                <td>{{ site.prix}}</td>
                                <td>
                                    <a class="btn btn-success" href="{{ path('modifsite',{'id':site.id}) }}">Modifier</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="{{ path('supp_site',{'id':site.id}) }}">Supprimer</a>
                                </td>

                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                    <!-- End small tables -->

                </div>
            </div>

        </div>



    </div>
{% endblock %}
