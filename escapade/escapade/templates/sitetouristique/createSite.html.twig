{% extends 'baseBack.html.twig' %}

{% block content %}
<div  style="display: flex;align-items: center;justify-content: center;margin-top: 2px; padding: 150px;">


    <!-- General Form Elements -->
    {{ form_start(f) }}
    <h5 class="card-title">Ajouter un Site touristique</h5>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Type de site</label>
        <div class="col-sm-10">
            {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Libelle de site</label>
        <div class="col-sm-10">
            {{ form_widget(f.libelle,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail" class="col-sm-4 col-form-label">Adresse de site</label>
        <div class="col-sm-10">
            {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword" class="col-sm-4 col-form-label">Description de site</label>
        <div class="col-sm-10">
            {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-4 col-form-label">Prix de site</label>
        <div class="col-sm-10">
            {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-4 col-form-label">File Upload</label>
        <div class="col-sm-10">
            <input class="form-control" type="file" id="formFile">
        </div>

        <br/>
        <br/>
        <br/>
        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

            {{ form_widget(f.Submit,{'attr':{'class':'btn btn-primary rounded-pill'}}) }}
        </div>
    </div>




    {{ form_end(f) }}


    {% endblock %}

