{% extends 'baseBack.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block content %}
    <h1>Reclamation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description |raw }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reclamation.idclient.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ reclamation.idclient.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse mail</th>
                <td>{{ reclamation.idclient.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}">back to list</a>


{% endblock %}
