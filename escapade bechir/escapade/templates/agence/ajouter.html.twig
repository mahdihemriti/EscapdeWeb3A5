{% extends "baseBack.html.twig" %}
{% block content %}

    <div class="content-page">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <h4 class="m-t-0 header-title">create Agence</h4>
                            <div class="row">
                                <div class="col-12">
                                    <div class="p-20">
                                        {{
                                        form_start(form_agence,
                                            {
                                                'attr'
                                                :
                                                {
                                                    'novalidate'
                                                    :
                                                    'novalidate'
                                                }})
                                        }}

                                        <form class="form-horizontal" role="form">

                                            <div class="form-group row">
                                                <label class="col-2 col-form-label">libelle</label>
                                                <div class="col-10">
                                                    {{ form_widget(form_agence.libelle, { 'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form_agence.libelle, { 'attr': {'class': 'form-control'} }) }}

                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">adresse</label>
                                                <div class="col-10">
                                                    {{ form_widget(form_agence.adresse, { 'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form_agence.adresse, { 'attr': {'class': 'form-control'} }) }}

                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">numtel</label>
                                                <div class="col-10">
                                                    {{ form_widget(form_agence.numtel, { 'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form_agence.numtel, { 'attr': {'class': 'form-control'} }) }}

                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">email</label>
                                                <div class="col-10">
                                                    {{ form_widget(form_agence.email, { 'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form_agence.email, { 'attr': {'class': 'form-control'} }) }}

                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">image</label>
                                                <div class="col-10">
                                                    {{ form_widget(form_agence.image, { 'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form_agence.image, { 'attr': {'class': 'form-control'} }) }}

                                                </div>
                                            </div>

                                            <a class="btn btn-primary" href="{{ path('app_agence') }}">Retour</a>
                                            <input type="submit" value="Ajouter"   class="btn btn-success" >
                                            {{ form_end(form_agence) }}
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}