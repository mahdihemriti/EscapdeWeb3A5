{% extends 'basepdf.html.twig' %}


{% block body %}


    <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <a href="{{ path('addsite') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                    <h5 class="card-title">Liste des sites touristiques</h5>

                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Type</th>
                            <th>Libelle</th>
                            <th>Adresse</th>
                            <th>Description</th>
                            <th>Prix</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for site in b %}
                            <tr>
                                <td>{{ site.type }}</td>
                                <td>{{ site.libelle}}</td>
                                <td>{{ site.adresse}}</td>
                                <td>{{ site.description}}</td>
                                <td>{{ site.prix}}</td>


                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                    <!-- End small tables -->

                </div>
            </div>

        </div>



    </div>
{% endblock %}
