{% extends 'base.html.twig' %}

{% block body %}
<div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">


    <!-- General Form Elements -->
    {{ form_start(f) }}
    <h5 class="card-title">Ajouter un guide</h5>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Nom de guide</label>
        <div class="col-sm-10">
            {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-4 col-form-label">Pr√©nom de guide</label>
        <div class="col-sm-10">
            {{ form_widget(f.pernom,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail" class="col-sm-4 col-form-label">Nationnalite</label>
        <div class="col-sm-10">
            {{ form_widget(f.nationnalite,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword" class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-10">
            {{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-4 col-form-label">Langue</label>
        <div class="col-sm-10">
            {{ form_widget(f.langue,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-4 col-form-label">File Upload</label>
        <div class="col-sm-10">
            <input class="form-control" type="file" id="formFile">
        </div>

        <br/>
        <br/>
        <br/>
        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

            {{ form_widget(f.Submit,{'attr':{'class':'btn btn-primary rounded-pill'}}) }}
        </div>
    </div>




    {{ form_end(f) }}


    {% endblock %}

